# Configuración SEO y Performance para Centro Médico CEDOMEDI

# Habilitar compresión Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript text/xml application/xml application/xml+rss text/plain
</IfModule>

# Configurar caché del navegador - OPTIMIZADO
<IfModule mod_expires.c>
    ExpiresActive On
    
    # CSS y JavaScript - 1 año para mejor rendimiento
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Imágenes - 1 año para máximo rendimiento
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    
    # HTML - 1 día para contenido dinámico
    ExpiresByType text/html "access plus 1 day"
    
    # Fuentes - 1 año
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/x-font-woff "access plus 1 year"
</IfModule>

# Redirecciones SEO amigables
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirigir www a no-www (opcional)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # Forzar HTTPS (opcional)
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Headers de seguridad y rendimiento
<IfModule mod_headers.c>
    # Seguridad
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    
    # Cache Control Headers para rendimiento
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=86400, public"
    </FilesMatch>
</IfModule>

